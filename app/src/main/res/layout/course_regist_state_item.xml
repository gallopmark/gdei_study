<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/margin_size_12">

        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_size_10"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="@dimen/font_size_16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_6"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_period"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableLeft="@drawable/course_period"
                    android:drawablePadding="@dimen/margin_size_4"
                    android:maxLength="10"
                    android:textColor="@color/blow_gray"
                    android:textSize="@dimen/font_size_14" />

                <TextView
                    android:id="@+id/tv_enroll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_size_16"
                    android:drawableLeft="@drawable/course_enroll"
                    android:drawablePadding="3dp"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:textColor="@color/blow_gray"
                    android:textSize="@dimen/font_size_14"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_6"
                android:background="@drawable/shape_course_type"
                android:ellipsize="end"
                android:maxLength="10"
                android:maxLines="1"
                android:textColor="@color/defaultColor"
                android:textSize="@dimen/font_size_14" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="@dimen/margin_size_20"
            android:layout_height="@dimen/margin_size_20"
            android:layout_gravity="center|left"
            android:layout_marginLeft="@dimen/margin_size_12"
            android:background="@drawable/checkbox"
            android:button="@null"
            android:clickable="false"
            android:enabled="false"
            android:focusable="false"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_1"
        android:background="@color/spaceColor" />
</LinearLayout>